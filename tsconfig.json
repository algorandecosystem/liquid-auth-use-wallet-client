{
    "include": ["./src/**/*.ts"],
    "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/__tests__/**"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./lib",
        "declaration": true,
        "declarationDir": "./lib/types"
    }
}
